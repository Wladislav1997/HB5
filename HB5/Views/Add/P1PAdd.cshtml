@model HB5.VM.AddVM.P1PAddVM
@{
    ViewBag.Title = "Совершение Операции";
}
<div class="container">
    <form asp-action="P1PAdd" asp-controller="Add">
        <div class="validation" asp-validation-summary="All"></div>
        @if (Model.idoper != null)
        {
            <input type="hidden" asp-for="idoper" class="form-control" value="@Model.idoper" />
        }
        else
        {

        }
        <div class="form-group">
            <label asp-for="Name" class="control-label">Название</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        @if (Model.idoper == null)
        {
            <div class="form-group">
                <label asp-for="NameAct" class="control-label">Действие</label>
                <select asp-for="NameAct" class="form-control">
                    <option value="расход">расход</option>
                    <option value="доход">доход</option>
                </select>
            </div>
        }
        <div class="form-group">
            <label asp-for="_Sum" class="control-label">Сумма</label>
            <input type="number" asp-for="_Sum" class="form-control" max="100000000" min="0"/>
        </div>
        <div class="form-group">
            <label asp-for="Coment" class="control-label">Комент</label>
            <input type="text" asp-for="Coment" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Совершить" class="btn btn-default" />
        </div>
    </form>
</div>