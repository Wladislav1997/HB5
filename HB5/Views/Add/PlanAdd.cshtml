@model HB5.VM.AddVM.PlanAddVM
@{
    ViewBag.Title = "Добавление Плана";
}
<div class="container">
    <form asp-action="PlanAdd" asp-controller="Add">
        <div class="validation" asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Название</label>
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Data" class="control-label">Дата начала периода</label>
            <input type="datetime-local" asp-for="Data" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="DataPeriod" class="control-label">Дата конца периода</label>
            <input type="datetime-local" asp-for="DataPeriod" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Добавить" class="btn btn-default" />
        </div>
    </form>
</div>