@model HB5.Models.P1
@{
    ViewBag.Title = "Просмотр Совершонной Операции";
}
<div class="container">
    <form asp-action="PDet" asp-controller="Det">
        <div class="form-group">
            <label asp-for="Name" class="control-label">Название</label>
            <input type="text" asp-for="Name" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="NameAct" class="control-label">Действие</label>
            <input type="text" asp-for="NameAct" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Data" class="control-label">Дата</label>
            <input type="datetime-local" asp-for="Data" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Sum" class="control-label">Сумма</label>
            <input type="number" asp-for="Sum" class="form-control" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Coment" class="control-label">Комент</label>
            <input type="text" asp-for="Coment" class="form-control" disabled />
        </div>
        <div class="form-group">
            <input type="submit" value=" Назад" class="btn btn-default" />
        </div>
    </form>
</div>
